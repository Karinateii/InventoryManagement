@model Supplier


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Supplier</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierName" class="p-0"></label>
            <input asp-for="SupplierName" class="form-control"/>
            <span asp-validation-for="SupplierName" class="text-danger"></span> 
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ContactPerson" class="p-0"></label>
            <input asp-for="ContactPerson" class="form-control"/>
            <span asp-validation-for="ContactPerson" class="text-danger"></span>
           
        </div>
        <div class="mb-3">
            <label asp-for="ContactEmail"></label>
            <input asp-for="ContactEmail" class="form-control"/>
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control" >Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Suppliers" asp-action="Index" class="btn btn-secondary border form-control">
                     Back to List
                  </a>
            </div>
        </div>
        
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}