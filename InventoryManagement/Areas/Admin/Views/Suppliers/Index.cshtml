@model List<Supplier>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Supplier 
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Suppliers" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Supplier
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Supplier Name
            </th>
            <th>
                Contact Person
            </th>
            <th>
                Contact Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var obj in Model) {
        <tr>
            <td>
                @obj.SupplierName
            </td>
            <td>
                @obj.ContactPerson
            </td>
            <td>
                @obj.ContactEmail
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                   <a asp-controller="Suppliers" asp-action="Edit"  asp-route-id="@obj.SupplierID" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a> 
                    @* <a asp-controller="Suppliers" asp-action="Details"  asp-route-id="@obj.SupplierID" class="btn btn-primary mx-2">
                        <i class="bi bi-binoculars-fill"></i> Details
                    </a>|  *@
                    <a asp-controller="Suppliers" asp-action="Delete"  asp-route-id="@obj.SupplierID" class="btn btn-danger mx-2">
                        <i class="bi bi-trash3"></i> Delete
                    </a>| 
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>