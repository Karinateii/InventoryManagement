
@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center mt-4 mb-5">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <i class="bi bi-person-plus-fill fs-1 mb-2 d-block"></i>
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <h2 class="mb-0">Register New User - Admin Portal</h2>
                        <p class="mb-0 mt-2">Create a new user account with role assignment</p>
                    }
                    else
                    {
                        <h2 class="mb-0">Create Account</h2>
                        <p class="mb-0 mt-2">Join our Inventory Management System</p>
                    }
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <h5 class="border-bottom pb-2 mb-3 text-primary">
                            <i class="bi bi-person-circle"></i> Account Information
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Name" class="form-label">
                                    <i class="bi bi-person"></i> Full Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Name" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Address <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com"/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label">
                                    <i class="bi bi-telephone"></i> Phone Number
                                </label>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="(555) 123-4567" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            
                            @if(User.IsInRole(SD.Role_Admin))
                            {
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="bi bi-shield-check"></i> User Role <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                        <option disabled selected>-- Select Role --</option>
                                    </select>
                                    <div class="form-text">
                                        <small>
                                            <strong>Admin:</strong> Full access | 
                                            <strong>Manager:</strong> Add/Edit inventory | 
                                            <strong>Employee:</strong> Orders & Stock | 
                                            <strong>Viewer:</strong> Read-only
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <h5 class="border-bottom pb-2 mb-3 mt-4 text-primary">
                            <i class="bi bi-lock"></i> Security
                        </h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Password" class="form-label">
                                    Password <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="••••••••" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <div class="form-text">
                                    <small>Minimum 8 characters, including uppercase, lowercase, number, and special character</small>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label">
                                    Confirm Password <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="••••••••" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <h5 class="border-bottom pb-2 mb-3 mt-4 text-primary">
                            <i class="bi bi-geo-alt"></i> Address (Optional)
                        </h5>
                        
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Input.StreetAddress" class="form-label">Street Address</label>
                                <input asp-for="Input.StreetAddress" class="form-control" placeholder="123 Main Street" />
                                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.City" class="form-label">City</label>
                                <input asp-for="Input.City" class="form-control" placeholder="New York" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.State" class="form-label">State</label>
                                <input asp-for="Input.State" class="form-control" placeholder="NY" />
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.PostalCode" class="form-label">Postal Code</label>
                                <input asp-for="Input.PostalCode" class="form-control" placeholder="10001" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-plus"></i> Create Account
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <p class="mb-0">
                        Already have an account? 
                        <a asp-page="./Login" class="fw-bold text-decoration-none">
                            Login here
                        </a>
                    </p>
                </div>
            </div>
            
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="card shadow border-0 mt-3">
                    <div class="card-body">
                        <h6 class="text-center text-muted mb-3">Or register with</h6>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                        <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

