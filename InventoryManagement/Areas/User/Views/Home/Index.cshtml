@model IEnumerable<LabSupply>

<div class="row pb-3">
    @foreach (var supply in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-3">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@supply.ImageURL" class="card-img-top rounded img-fluid" style="width: 100%; height: 200px;" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text dark opacity-75 text-uppercase text-center">@supply.SupplyName</p>
                                <p class="card-title text-warning text-center"><b>@supply.QuantityOnHand</b><b> Units</b></p>
                            </div>
                        </div>
                        <div>
                            <a href="#" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
